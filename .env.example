# Robinhood Credentials
ROBINHOOD_USERNAME=your_email@example.com
ROBINHOOD_PASSWORD=your_password

# TOTP Secret for 2FA (optional but recommended)
# Get this when setting up "Other" authenticator in Robinhood 2FA settings
ROBINHOOD_TOTP_SECRET=your_totp_secret

# Trading Configuration
TRADING_MODE=paper  # 'paper' for simulation, 'live' for real trading

# Risk Management
MAX_POSITION_PCT=10        # Maximum position size as % of portfolio
MAX_TOTAL_POSITIONS=20     # Maximum number of positions
STOP_LOSS_PCT=5            # Default stop loss percentage
TAKE_PROFIT_PCT=15         # Default take profit percentage
MAX_DAILY_LOSS_PCT=3       # Maximum daily loss before stopping
RISK_PER_TRADE_PCT=1       # Risk per trade as % of portfolio

# Dashboard
DASHBOARD_PORT=8501
DEBUG_MODE=false
